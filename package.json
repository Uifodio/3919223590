{
  "name": "nexus-editor",
  "version": "1.0.0",
  "description": "Professional code editor designed for Unity development",
  "author": "Uifodio",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "dist": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.nexuslabs.editor",
    "productName": "Nexus Editor",
    "copyright": "Copyright Â© 2025 Nexus Labs Ltd.",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "dir"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
