{
  "name": "nexus-editor",
  "version": "1.0.0",
  "description": "Professional code editor designed for Unity development",
  "author": "Uifodio",
  "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && node -e \"const fs=require('fs'); fs.copyFileSync('public/electron.js','build/electron.js'); fs.copyFileSync('public/preload.js','build/preload.js'); fs.copyFileSync('public/icon.png','build/icon.png');\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.nexuslabs.editor",
    "productName": "Nexus Editor",
    "publisherName": "Nexus Labs Ltd.",
    "copyright": "Copyright Â© ${year} Nexus Labs Ltd.",
    "directories": { "output": "dist" },
    "files": [ "build/**/*", "node_modules/**/*" ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "win": {
      "target": [ { "target": "nsis", "arch": ["x64","ia32"] } ],
      "icon": "build/icon.png",
      "legalTrademarks": "Nexus Labs",
      "companyName": "Nexus Labs Ltd.",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Nexus Labs Ltd.",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nexus Editor"
    },
    "linux": { "target": ["AppImage"], "icon": "build/icon.png", "category": "Development" },
    "mac": { "target": ["dmg"], "icon": "build/icon.icns", "category": "public.app-category.developer-tools" }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "electron": "^28.0.0",
    "uuid": "^9.0.1",
    "electron-store": "^8.1.0",
    "prismjs": "^1.29.0",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron-builder": "^24.9.1"
  },
  "browserslist": {
    "production": [ ">0.2%", "not dead", "not op_mini all" ],
    "development": [ "last 1 chrome version", "last 1 firefox version", "last 1 safari version" ]
  }
}
