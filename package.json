{
  "name": "unity-code-editor",
  "version": "1.0.0",
  "description": "Lightweight code editor with file manager for Unity development",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "diagnostic": "node diagnostic.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["unity", "code-editor", "file-manager"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "monaco-editor": "^0.45.0",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.unitycodeeditor.app",
    "productName": "Unity Code Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}