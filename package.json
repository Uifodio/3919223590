{
  "name": "nova-explorer",
  "version": "1.0.0",
  "description": "Advanced File Manager with Built-in Editor - Like Windows Explorer + VS Code",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run watch\" \"npm run electron\"",
    "watch": "tsc -w",
    "electron": "wait-on dist/main.js && electron .",
    "build": "tsc && electron-builder",
    "build:win": "tsc && electron-builder --win",
    "dist": "npm run build:win",
    "pack": "tsc && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.novaexplorer.app",
    "productName": "Nova Explorer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "file-manager",
    "editor",
    "electron",
    "typescript",
    "windows"
  ],
  "author": "Nova Explorer Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.4",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "chokidar": "^3.5.3",
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1",
    "node-pty": "^1.0.0",
    "xterm": "^5.3.0",
    "monaco-editor": "^0.45.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  }
}