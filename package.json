{
  "name": "nexus-editor",
  "version": "1.0.0",
  "description": "Professional code editor designed for Unity development",
  "author": "Uifodio",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.nexuslabs.editor",
    "productName": "Nexus Editor",
    "copyright": "Copyright Â© 2025 Nexus Labs Ltd.",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "node_modules/**/*"
    ],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/icon.png",
      "legalTrademarks": "Nexus Labs",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Nexus Labs Ltd.",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nexus Editor"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png",
      "category": "Development"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.developer-tools"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-store": "^8.1.0"
  }
}
