#:kivy 2.2.1

<FileItem>:
    canvas.before:
        Color:
            rgba: (0.2, 0.4, 0.8, 1) if self.is_selected else (0.3, 0.3, 0.3, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(40)
    padding: dp(10)
    spacing: dp(10)
    
    Label:
        text: root.name
        size_hint_x: 0.5
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        color: (1, 1, 1, 1)
    
    Label:
        text: root.size
        size_hint_x: 0.2
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        color: (0.8, 0.8, 0.8, 1)
    
    Label:
        text: root.modified
        size_hint_x: 0.3
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        color: (0.8, 0.8, 0.8, 1)

<FileList>:
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    
    bar_color: (0.3, 0.3, 0.3, 1)
    bar_inactive_color: (0.2, 0.2, 0.2, 1)
    effect_cls: 'ScrollEffect'

<AddressBar>:
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<ToolBar>:
    canvas.before:
        Color:
            rgba: (0.3, 0.3, 0.3, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<StatusBar>:
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<EditorWidget>:
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.1, 1)
        Rectangle:
            pos: self.pos
            size: self.size