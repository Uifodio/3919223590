<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Color Palette -->
    <Color x:Key="PrimaryColor">#1E1E1E</Color>
    <Color x:Key="SecondaryColor">#2D2D30</Color>
    <Color x:Key="AccentColor">#007ACC</Color>
    <Color x:Key="AccentHoverColor">#1C97EA</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#CCCCCC</Color>
    <Color x:Key="BorderColor">#3F3F46</Color>
    <Color x:Key="ErrorColor">#F14C4C</Color>
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FF9800</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    
    <!-- Application Colors -->
    <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="ApplicationForegroundBrush" Color="{StaticResource TextPrimaryColor}"/>
    
    <!-- Window Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource BorderColor}"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="ButtonPressedBackground" Color="{StaticResource AccentHoverColor}"/>
    
    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="TextBoxForeground" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="{StaticResource BorderColor}"/>
    
    <!-- TreeView Colors -->
    <SolidColorBrush x:Key="TreeViewBackground" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="TreeViewForeground" Color="{StaticResource TextPrimaryColor}"/>
    
    <!-- ListView Colors -->
    <SolidColorBrush x:Key="ListViewBackground" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="ListViewForeground" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="ListViewBorderBrush" Color="{StaticResource BorderColor}"/>
    
    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="MenuForeground" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="MenuBorderBrush" Color="{StaticResource BorderColor}"/>
    
    <!-- ToolBar Colors -->
    <SolidColorBrush x:Key="ToolBarBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ToolBarForeground" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="ToolBarBorderBrush" Color="{StaticResource BorderColor}"/>
    
    <!-- StatusBar Colors -->
    <SolidColorBrush x:Key="StatusBarBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="StatusBarForeground" Color="{StaticResource TextSecondaryColor}"/>
    
    <!-- Editor Colors -->
    <SolidColorBrush x:Key="EditorBackground" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="EditorForeground" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="EditorLineNumbersBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="EditorLineNumbersForeground" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="EditorSelectionBackground" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="EditorSelectionForeground" Color="{StaticResource TextPrimaryColor}"/>
    
    <!-- Syntax Highlighting Colors -->
    <SolidColorBrush x:Key="KeywordColor" Color="#569CD6"/>
    <SolidColorBrush x:Key="StringColor" Color="#CE9178"/>
    <SolidColorBrush x:Key="CommentColor" Color="#6A9955"/>
    <SolidColorBrush x:Key="NumberColor" Color="#B5CEA8"/>
    <SolidColorBrush x:Key="TypeColor" Color="#4EC9B0"/>
    <SolidColorBrush x:Key="MethodColor" Color="#DCDCAA"/>
    
    <!-- Progress Bar Colors -->
    <SolidColorBrush x:Key="ProgressBarBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ProgressBarForeground" Color="{StaticResource AccentColor}"/>
    
    <!-- ScrollBar Colors -->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ScrollBarForeground" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ScrollBarThumbBackground" Color="{StaticResource AccentColor}"/>
    
    <!-- Tab Colors -->
    <SolidColorBrush x:Key="TabBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="TabForeground" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TabSelectedBackground" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="TabSelectedForeground" Color="{StaticResource TextPrimaryColor}"/>
    
    <!-- Context Menu Colors -->
    <SolidColorBrush x:Key="ContextMenuBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ContextMenuForeground" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="ContextMenuBorderBrush" Color="{StaticResource BorderColor}"/>
    
    <!-- Splitter Colors -->
    <SolidColorBrush x:Key="SplitterBackground" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="SplitterForeground" Color="{StaticResource AccentColor}"/>
    
</ResourceDictionary>